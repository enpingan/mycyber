<div class="container border-form-div" style="margin-top:160px;min-width:505px!important;width:505px;">
  <div class="radius-div" style="text-align:center;background-color:rgba(0, 0, 0, 0.35);margin:0 0;padding:20px 0;">
    <!-- <h2>User Panel - Log in</h2> -->
    <%= image_tag('txtlogo.png') %>
  </div>
  <div class="actions">
    <h5 style="margin:0 0;">Account Login</h5>
  </div>

  <br/>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field" style="margin-top:-10px;">
      <span>&nbsp;Username</span>
      <%#= f.label :email %><!-- <br/> -->
      <%#= f.email_field :email, :autofocus => true, :placeholder => 'Username', :class=>'form-control', :style=>'background-color:#5C5C73;font-size:12px;padding:11px;color:rgb(242, 255, 194);margin-top:11px;' %>
      <div class="inner-addon left-addon" style="margin-top:-5px;">
        <i class="glyphicon glyphicon-user" style="color:#AAC2B7;font-size:18px;margin:0px 4px;"></i>
        <%#= f.text_field :email, autofocus: true, :required=>true, :placeholder=>'Username', :class=>'form-control', :style=>'background-color:#5C5C73;font-size:12px;padding:11px;padding-left:38px;color:rgb(242, 255, 194);margin-top:11px;'%>
        <%= f.text_field :username, autofocus: true, :required=>true, :autocomplete=>:off,:placeholder=>'Username', :class=>'form-control', :style=>'background-color:#5C5C73;font-size:12px;padding:11px;padding-left:38px;color:rgb(242, 255, 194);margin-top:11px;'%>
      </div>
    </div>
    <div class="field">
      <span>&nbsp;Password</span>
      <%#= f.label :password %><!-- <br/> -->
      <%#= f.password_field :password, autocomplete: "off", :placeholder => 'Password', :class=>'form-control', :style=>'background-color:#5C5C73;font-size:12px;padding:11px;color:rgb(242, 255, 194);margin-top:11px;' %>
      <div class="inner-addon left-addon" style="margin-top:-5px;">
        <i class="glyphicon glyphicon-lock" style="color:#AAC2B7;font-size:18px;margin:0px 4px;"></i>
        <%= f.password_field :password, autocomplete: "off", :required=>true, :placeholder=>'Password', :class=>'form-control', :style=>'background-color:#5C5C73;font-size:12px;padding:11px;padding-left:38px;color:rgb(242, 255, 194);margin-top:11px;' %>
      </div>
    </div>
    
      
    <% if devise_mapping.rememberable? -%>
      <div class="field" style="text-align:right">
        <div class="checkbox checkbox-success">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Remember This", :style=>'font-size:12px;font-weight:normal;color:rgb(242, 255, 194)' %>
        </div>
      </div>
    <% end -%>

    <div class="actions" id="actions2">
      <%#= f.submit "Log in", :class => 'btn btn-navy' %>
      <%= button_tag(type: "submit", class:'btn btn-info btn-device', :id=>'btn_login', :style=>'background-color:rgba(157, 207, 167, 0.5);border-color:#001f6f;') do %>
        <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>&nbsp;&nbsp;Log In
      <% end %>          
    </div>
  <% end %>

  <%#= render "devise/shared/links" %>
</div>

